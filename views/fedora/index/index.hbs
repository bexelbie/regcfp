{{#unless session.currentUser}}

    <div class="container">
    <div class="row">
    <div class="col-xs-12 bottom-margin">

    <h3>Please log in to continue your registration.</h3>
    <p>You will need to authenticate with your Fedora account.</p>
    <div class="button"><a href="/auth/login/fedora">Log In Now</a></div>
    </div>
    </div>
    </div>

{{else}}

<div class="container bottom-margin" id="index">
  <div class="row">
    <div class="col-xs-12 col-sm-8">
      <h3>Welcome!</h3>
      <p>This is Flock's registration and session proposal system. Please use the buttons below to register for Flock and submit session proposals. If you have any questions about or issues with this system, please contact <a href="mailto:flock-planning@lists.fedoraproject.org">the Flock planning mailing list</a>.</p>
    </div>
    
    {{#has_permission "registration/desk"}}
    <div class="button"><a href="/desk">Desk</a></div>
    {{/has_permission}}
   
    </div><div class="row">
    {{#if config.registration.enabled}}
      <div class="col-xs-12 col-sm-6 col-md-4" id="registration">    
        <h4>Registration</h4>
        <div class="buttons">
        {{#has_permission "registration/register" }}
        {{#if registration}}
        {{#ifEqual registration.paid_paypal 0}}
        <div class="button"><a href="/registration/pay">Pay registration fee</a></div>
        {{/ifEqual}}

        <div class="button"><a href="/registration/register">Update registration</a></div>
        {{#has_permission "registration/request_receipt"}}
        <div class="button"><a href="/registration/receipt" target="_blank">Get receipt</a></div>
        {{/has_permission}}

        {{#has_permission "registration/cancel"}}
        <div class="button"><a href="/registration/cancel">Cancel registration</a></div>
        {{/has_permission}}

        {{else}}
        <div class="button"><a href="/registration/register">Register</a></div>
        {{/if}}
        {{/has_permission}}

        {{#has_permission "registration/view_public"}}
        <div class="button"><a href="/registration/list">View current registrations</a></div>
        {{/has_permission}}
        </div>
    </div>
    {{/if}}

    {{#if config.papers.enabled}}
      <div class="col-xs-12 col-sm-6 col-md-4" id="papers">    
        <h4>Papers management</h4>
        <div class="buttons">
        {{#has_permission "papers/submit" }}
          <div class="button"><a href="/papers/submit">Submit a talk</a></div>
        {{/has_permission}}
        {{#has_permission "papers/list/own" }}
          <div class="button"><a href="/papers/list/own">View your submitted talks</a></div>
        {{/has_permission}}
        {{#has_permission "papers/list/accepted" }}
          <div class="button"><a href="/papers/list">View accepted talks</a></div>
        {{/has_permission}}
        </div>
      </div>
    {{/if}}

    {{#has_permission "admin"}}
      <div class="col-xs-12 col-md-4" id="admin">    
         <h4>Admin Area</h4>

         <h5>Papers management</h5>
         <div class="buttons">
         {{#has_permission "papers/list/all"}}
           <div class="button"><a href="/papers/admin/list">View all talks</a></div>
           <div class="button"><a href="/papers/admin/export">Export all talks</a></div>
         {{/has_permission}}
         {{#has_permission "papers/vote"}}
           <div class="button"><a href="/papers/admin/vote">Vote on talks</a></div>
         {{/has_permission}}
         {{#has_permission "papers/showvotes" }}
           <div class="button"><a href="/papers/admin/vote/show">Show talk votes</a></div>
         {{/has_permission}}
         </div>

         {{#has_permission "registration/view_all" }}
         <h5>Registration</h5>
           <div class="buttons">
             <div class="button"><a href="/registration/admin/list">List all registrations</a></div>
           </div>
           <div class="buttons">
             <div class="button"><a href="/registration/admin/export">Export all registrations</a></div>
           </div>
         {{/has_permission}}
         
       </div>
     </div>
   </div>
    {{/has_permission}}
{{/unless}}
